<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smikhlevskiy.uafinance" >

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/currency_exchange"
        android:label="UAFinance"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCPFE8KBSoJloV3MtI5ISbyNgiFgcCtMH8" />

        <activity
            android:name="smikhlevskiy.uafinance.UI.MainActivity"
            android:label="UAFinance"
            android:exported="true"
            android:allowTaskReparenting="false"
        android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.OrganizationActivity"
            android:label="@string/title_activity_organization" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="smikhlevskiy.uafinance.UI.OrganizationActivity" />

        </activity>
        <activity
            android:name=".UI.LocationMapActivity"
            android:label="@string/mapActivityName" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.LocationMapActivity" />

        </activity>

        <activity
            android:name=".UI.KerbstoneActivity"
            android:label="@string/kerbstone_market" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.LocationMapActivity" />

        </activity>

        <service
            android:name=".services.NotificationService"
            android:exported="false"
            android:label="UAFinace notifications"
            android:icon="@mipmap/currency_exchange">
        </service>


    </application>

</manifest>
