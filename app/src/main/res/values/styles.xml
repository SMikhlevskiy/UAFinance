    <!-- Base application theme. -->
    <style name="hiderStyle" parent="Base.Theme.AppCompat.Light">
        <item name="android:background">#BBAA33</item>
        <item name="android:textColor">#000000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="hiderRedTextStyle" parent="hiderStyle">
        <item name="android:background">#BBAA33</item>
        <item name="android:textColor">#BB2222</item>
