<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        

    </style>


    <style name="mainStyle" parent="Base.Theme.AppCompat.Light">
        <item name="android:background">@color/uafmainback</item>
        <item name="android:textColor">@color/uafblack</item>

        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>

    </style>

    <!-- Base application theme. -->
    <style name="hiderStyle" parent="Base.Theme.AppCompat.Light">
        <item name="android:background">@color/uafhiderback</item>
        <item name="android:textColor">@color/uafblack</item>

    </style>


    <style name="hiderBlackTextStyle" parent="hiderStyle">

        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/custom_vertical_margin</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>



    </style>

    <style name="hiderRedTextStyle" parent="hiderStyle">
        <item name="android:background">@color/uafhiderback</item>
        <item name="android:textColor">@color/uafredtext</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/custom_vertical_margin</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="UAFbuttonStyle" parent="Base.Theme.AppCompat.Light">

        <item name="android:textColor">@color/uafblack</item>



        <item name="android:minHeight">0dp</item>

        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">-5dp</item>
        <item name="android:paddingBottom">-5dp</item>


        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:onClick">"onclick"</item>




    </style>


</resources>
